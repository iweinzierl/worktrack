<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.iweinzierl.worktrack">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".WorktrackApplication_"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD2Rvt9yRRYHUZ1zwM6o9p7Fhh1nyxIu_E" />

        <!-- ACTIVITIES -->
        <activity
            android:name=".DayOverviewActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WeekOverviewActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".YearOverviewActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".SettingsActivity_" />

        <activity
            android:name=".ListBackupsActivity_"
            android:label="@string/activity_list_backups"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- RECEIVERS -->
        <receiver
            android:name=".receiver.StartWorkReceiver_"
            android:exported="true">
            <intent-filter>
                <action android:name="de.iweinzierl.worktrack.START_WORK" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.StopWorkReceiver_"
            android:exported="true">
            <intent-filter>
                <action android:name="de.iweinzierl.worktrack.STOP_WORK" />
            </intent-filter>
        </receiver>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>