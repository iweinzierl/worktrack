<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBa">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.Dialog.Title" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.Dialog.Text" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.Dialog.Icon" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
    </style>

    <style name="AppTheme.Dialog.Button" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.EmptyView.Title" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.EmptyView.Text" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.EmptyView.Icon" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
    </style>

    <style name="AppTheme.EmptyView.Button" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Drawer">
        <item name="android:background">@color/drawerBackgroundColor</item>
    </style>

    <style name="Drawer.Header">
        <item name="android:background">@color/drawerHeaderBackgroundColor</item>
    </style>

    <style name="Drawer.Header.Text">
        <item name="android:textSize">@dimen/drawerHeaderFontSize</item>
        <item name="android:textColor">@color/drawerHeaderTextColor</item>
    </style>

    <style name="Drawer.Item">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/drawerItemLeftPadding</item>
        <item name="android:layout_marginEnd">@dimen/drawerItemRightPadding</item>
    </style>

    <style name="Drawer.Item.Text">
        <item name="android:textSize">@dimen/drawerFontSize</item>
        <item name="android:textColor">@color/drawerFontColor</item>
        <item name="android:paddingTop">@dimen/drawerItemTopPadding</item>
        <item name="android:paddingBottom">@dimen/drawerItemBottomPadding</item>
    </style>

    <style name="CardView.Title">
        <item name="android:textSize">@dimen/cardTitleFontSize</item>
        <item name="android:textColor">@color/cardViewTextTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/cardTitlePaddingBottom</item>
    </style>

    <style name="CardView.Text">
        <item name="android:textColor">@color/cardViewTextContent</item>
        <item name="android:textSize">@dimen/cardContentFontSize</item>
    </style>

    <style name="CardView.Button" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
